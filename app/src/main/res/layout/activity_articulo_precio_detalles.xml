<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ArticuloPrecioDetallesActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/vertical_l_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="80px"
                android:layout_marginBottom="40px"
                android:layout_weight="1"
                android:longClickable="false"
                app:srcCompat="@drawable/ic_precio_wt" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/robotomedium"
                android:text="Código Artículo:"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="8pt" />

            <TextView
                android:id="@+id/tv_codigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/robotoregular"
                android:text="-"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:layout_weight="1"
                android:fontFamily="@font/robotomedium"
                android:text="Descripción:"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="8pt" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/robotoregular"
                android:text="-"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:layout_weight="1"
                android:fontFamily="@font/robotomedium"
                android:text="Clasificación:"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="8pt" />

            <TextView
                android:id="@+id/tv_clas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/robotoregular"
                android:text="-"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:layout_weight="1"
                android:fontFamily="@font/robotomedium"
                android:text="Precio 1:"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="8pt" />

            <TextView
                android:id="@+id/tv_p1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/robotoregular"
                android:text="$ 0.00"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:layout_weight="1"
                android:fontFamily="@font/robotomedium"
                android:text="Precio 2:"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="8pt" />

            <TextView
                android:id="@+id/tv_p2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/robotoregular"
                android:text="$ 0.00"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:layout_weight="1"
                android:fontFamily="@font/robotomedium"
                android:text="Precio 3:"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="8pt" />

            <TextView
                android:id="@+id/tv_p3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/robotoregular"
                android:text="$ 0.00"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:layout_weight="1"
                android:fontFamily="@font/robotomedium"
                android:text="Última Actualización:"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="8pt" />


            <TextView
                android:id="@+id/tv_ultimaMod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40px"
                android:layout_weight="1"
                android:fontFamily="@font/robotoregular"
                android:text="ultima_mod"
                android:textAlignment="center"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>