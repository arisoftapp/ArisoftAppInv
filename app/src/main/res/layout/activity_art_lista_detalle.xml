                android:text="Unidad de Venta:"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="8pt" />

            <TextView
                android:id="@+id/tv_venta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/robotoregular"
                android:text="exitencia"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:layout_weight="1"
                android:fontFamily="@font/robotomedium"
                android:text="Existencia General"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="8pt" />


            <TextView
                android:id="@+id/tv_exigral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/robotoregular"
                android:text="existencia"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:layout_weight="1"
                android:fontFamily="@font/robotomedium"
                android:text="Última Actualización:"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="8pt" />


            <TextView
                android:id="@+id/tv_ultimaMod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/robotoregular"
                android:text="ultima_mod"
                android:textAlignment="center"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>

